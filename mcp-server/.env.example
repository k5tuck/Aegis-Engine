# AEGIS MCP Server Configuration

# Required - AI Provider API Keys
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Optional - Additional AI Providers
OPENAI_API_KEY=sk-xxxxx
DEEPSEEK_API_KEY=xxxxx

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Unreal Engine Connection
UE_HOST=localhost
UE_HTTP_PORT=30020
UE_WS_PORT=30021

# Logging
LOG_LEVEL=info
NODE_ENV=development

# Security
SAFE_MODE_ENABLED=true
MAX_ACTIONS_PER_MINUTE=60
MAX_DELETES_PER_SESSION=50

# Preview Settings
PREVIEW_EXPIRATION_MS=300000
AUTO_APPROVE_LEVEL=low

# Plugin Settings
PLUGIN_HOT_RELOAD=true
PLUGIN_HOT_RELOAD_DEBOUNCE_MS=1000
